                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textview1"
                                style="@style/TextAppearance.AppCompat.Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_15"
                                android:fontFamily="@font/bold"
                                android:text="Fantasy"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/heading" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/fantasyRV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/half_dimen"
                                android:paddingRight="@dimen/half_dimen"
                                android:scrollbars="none"
                                android:visibility="gone" />

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/fantasyShimmer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorBlackBG"
                                app:shimmer_base_color="@color/colorBlackBG"
                                app:shimmer_duration="800"
                                app:shimmer_highlight_alpha="0">

                                <include layout="@layout/shimmer_custom_book_home" />

                            </com.facebook.shimmer.ShimmerFrameLayout>

                            <TextView
                                android:id="@+id/fantasyErr"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:gravity="center"
                                android:text="Error."
                                android:textColor="@color/colorWhite"
                                android:alpha="0.7"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
