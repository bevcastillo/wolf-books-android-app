                        android:text="Error."
                        android:gravity="center"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/gradient_home_category"
                    android:orientation="vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="18dp">

                    <TextView
                        android:id="@+id/textview11"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:text="History"
                        android:fontFamily="@font/karla_regular"
                        android:textColor="@color/colorTextBlack"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/historyRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:scrollbars="none" />

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/historyShimmer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:shimmer_duration="800">

                        <include layout="@layout/custom_book_home_shimmer" />

                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <TextView
                        android:id="@+id/historyErr"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="Error."
                        android:gravity="center"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/gradient_home_category"
                    android:orientation="vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="18dp">

                    <TextView
                        android:id="@+id/textview12"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:text="Children's"
                        android:fontFamily="@font/karla_regular"
                        android:textColor="@color/colorTextBlack"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/childrensRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:scrollbars="none" />

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/childrenShimmer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:shimmer_duration="800">

                        <include layout="@layout/custom_book_home_shimmer" />

                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <TextView
                        android:id="@+id/childrenErr"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="Error."
                        android:gravity="center"
                        android:visibility="gone"/>

                </LinearLayout>


            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>