<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="12dp"
    android:id="@+id/home_book_layout">
a
    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/iv_book_image"
        android:layout_width="110dp"
        android:layout_height="175dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorShimmer"
        app:siRadius="@dimen/half_dimen"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_book_title"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:text=""
        android:fontFamily="@font/extra_bold"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:background="@color/colorShimmer"
        android:textColor="@color/lighterBlack"
        android:layout_marginEnd="0dp"
        android:layout_below="@+id/iv_book_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="top"
        android:layout_marginRight="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tv_book_author"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:fontFamily="@font/lato"
        android:textColor="@android:color/darker_gray"
        android:background="@color/colorShimmer"
        android:layout_below="@+id/tv_book_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <RatingBar
        android:id="@+id/RatingRB"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="invisible"
        android:numStars="5"
        android:stepSize="0.5"
        android:theme="@style/RatingBar"
        android:background="@color/colorShimmer"
        android:layout_below="@+id/tv_book_author"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>