<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/half_dimen"
        android:paddingLeft="@dimen/default_dimen"
        android:paddingRight="@dimen/half_dimen"
        android:paddingBottom="@dimen/default_dimen">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:siRadius="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_placeholder_gray"/>

        <TextView
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/regular"
            android:background="@color/colorShimmer"
            android:textSize="@dimen/paragraph"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/half_dimen"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="0dp"
            android:gravity="top"
            android:layout_marginRight="0dp" />

    </LinearLayout>

    <LinearLayout
