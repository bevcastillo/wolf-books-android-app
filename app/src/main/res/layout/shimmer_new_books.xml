<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="6dp"
    android:id="@+id/book_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlackBG">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/imageIV"
            android:layout_width="110dp"
            android:layout_height="175dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            card_view:siRadius="@dimen/default_dimen"
            android:layout_marginBottom="8dp"
            android:src="@drawable/image_placeholder_gray"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintCircleRadius="10dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/numberTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_top"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginLeft="@dimen/default_dimen"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:fontFamily="@font/regular"
            android:textColor="@android:color/white"
            card_view:layout_constraintStart_toStartOf="@+id/imageIV"
            card_view:layout_constraintTop_toTopOf="@+id/imageIV"
            style="@style/TextAppearance.AppCompat.Caption"/>


        <TextView
            android:id="@+id/descriptionTV"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_15"
            android:layout_marginTop="@dimen/half_dimen"
            android:layout_marginStart="@dimen/default_dimen"
            android:layout_marginEnd="@dimen/default_dimen"
            android:text=""
            android:ellipsize="end"
            android:fontFamily="@font/regular"
            android:maxLines="3"
            android:background="@color/colorShimmer"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/imageIV"
            card_view:layout_constraintTop_toBottomOf="@+id/authorTV" />

        <TextView
            android:id="@+id/titleTV"
            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="@dimen/default_dimen"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:fontFamily="@font/bold"
            android:textSize="@dimen/headingMedium"
            android:background="@color/colorShimmer"
            android:textColor="@color/colorTextBlack"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/imageIV"
            card_view:layout_constraintTop_toTopOf="@+id/imageIV" />


        <TextView
            android:id="@+id/authorTV"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_dimen"
            android:layout_marginRight="@dimen/dimen_40"
            android:background="@color/colorShimmer"
            android:ellipsize="end"
            android:fontFamily="@font/regular"
            android:maxLines="1"
            android:text=""
            android:textColor="@android:color/darker_gray"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/titleTV"
            card_view:layout_constraintTop_toBottomOf="@+id/titleTV" />

        <RatingBar
            android:id="@+id/ratingsRB"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/colorShimmer"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/RatingBar"
            android:visibility="invisible"
            card_view:layout_constraintStart_toStartOf="@+id/authorTV"
            card_view:layout_constraintTop_toBottomOf="@+id/descriptionTV" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>