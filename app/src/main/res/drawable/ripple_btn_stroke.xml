<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/grayTransparent"
    tools:targetApi="lollipop">
    <item android:id="@+id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/half_dimen"/>
            <solid android:color="@color/colorBlackBG" />
            <stroke
                android:color="@color/colorWhite"
                android:width="1.2dp"/>
            <padding
                android:left="@dimen/default_dimen"
                android:right="@dimen/default_dimen"
                android:top="@dimen/default_dimen"
                android:bottom="@dimen/default_dimen"/>
        </shape>
    </item>
</ripple>